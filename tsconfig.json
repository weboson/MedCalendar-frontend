{
  "compilerOptions": {
    "target": "ES2020",
    "removeComments": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /*Отключить полную проверку типов (будут сообщаться только о критических ошибках синтаксического анализа и генерации).*/
    "noCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,

    
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
